{
  "buildCommand": "pnpm install --recursive && pnpm run build",
  "installCommand": "pnpm install --recursive",
  "framework": null,
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/serverless"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/serverless.js": {
      "runtime": "nodejs20.x"
    }
  }
}

