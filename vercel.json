{
  "buildCommand": "pnpm --filter client build && pnpm run build:server",
  "installCommand": "pnpm install --recursive",
  "framework": null,
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}

