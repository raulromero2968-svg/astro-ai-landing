{
  "buildCommand": "cd client && pnpm install && pnpm exec vite build && cd .. && pnpm run build:server",
  "installCommand": "pnpm install --recursive",
  "framework": null,
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
        {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  }
}

